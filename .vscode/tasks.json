    {
      "label": "TypeScript: Check All",
      "type": "shell",
      "command": "npm run type-check",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "ESLint: Fix All",
      "type": "shell",
      "command": "npm run lint:fix",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Prettier: Format All",
      "type": "shell",
      "command": "npm run format",
