# UE5 BIM Walkthrough Add-On Configuration
# Copy this file to .env and configure your settings

# PostgreSQL Database Connection (Neon or other PostgreSQL provider)
# Format: postgresql://username:password@host:port/database?sslmode=require
PG_URL=postgresql://user:password@your-neon-instance.neon.tech:5432/installsure?sslmode=require

# Unreal Engine Installation Path
# Update this path to match your UE5 installation
# Windows default: C:/Program Files/Epic Games/UE_5.3
# Adjust version number as needed
UE5_ENGINE_PATH=C:/Program Files/Epic Games/UE_5.3

# Project Settings
PROJECT_NAME=InstallSure_BIM_Walkthrough
PROJECT_VERSION=2.0

# BIM Processing Settings
# Supported formats: IFC, RVT, DWG, PDF
SUPPORTED_FORMATS=IFC,RVT,DWG,PDF

# Input/Output Directories (relative to project root)
INPUT_DIR=./Input
OUTPUT_DIR=./Output
TEMP_DIR=./Temp

# Processing Options
ENABLE_AUTO_LOD=true
LOD_DISTANCE_0=1000
LOD_DISTANCE_1=5000
LOD_DISTANCE_2=10000

# Quality Settings
TEXTURE_QUALITY=high
MESH_QUALITY=medium
LIGHTING_QUALITY=high

# Performance Settings
MAX_CONCURRENT_IMPORTS=4
IMPORT_TIMEOUT_MINUTES=30

# Rendering Settings
ENABLE_RAYTRACING=false
ENABLE_NANITE=true
ENABLE_LUMEN=true

# Export Settings
EXPORT_FORMAT=exe
PACKAGE_FOR_DISTRIBUTION=true

# Debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false
LOG_FILE=./Logs/build.log

# Optional: Integration Services
# AUTODESK_CLIENT_ID=your_client_id
# AUTODESK_CLIENT_SECRET=your_client_secret
# AUTODESK_CALLBACK_URL=http://localhost:8080/callback

# Optional: Cloud Storage
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Optional: Notification Settings
# EMAIL_NOTIFICATIONS=false
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_app_password
