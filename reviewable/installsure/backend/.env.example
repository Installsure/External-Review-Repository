# Environment Configuration
# Copy this file to .env and configure the values

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Security
API_SECRET=your-secure-api-secret-here
JWT_SECRET=your-jwt-secret-here

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/installsure

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Forge/AutoCAD Integration
FORGE_CLIENT_ID=your-forge-client-id
FORGE_CLIENT_SECRET=your-forge-client-secret
FORGE_BASE_URL=https://developer.api.autodesk.com
FORGE_BUCKET=installsure-dev

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=installsure-files

# Features
ENABLE_REAL_TIME_SYNC=true
ENABLE_FILE_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Logging
LOG_LEVEL=info
LOG_DIR=./logs